#include<stdio.h>
int main()
{
int i,j;
int n;
scanf("%d,&n");
int size=(2*n)-1;
int a[size][size];
int start=0;
int end=size-1;
while(n>0)
{
for(i=start;i<=end;i++);
{
for(j=start;j<=end;j++);
{
if(i==start||==end||j==start||j==end)
a[i][j]=n;
}
   }
start++;
end--;
n--;
}
for(i=o;i<size;i++)
{
for(j=o;j<size;j++)
{
printf("%d",a[i][j]);
}
printf("\n");
}}
